{
  "name": "transfer-sql",
  "version": "1.0.0",
  "description": "Node.js/TypeScript library for Teradata database testing and data processing validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "playwright test",
    "test:watch": "playwright test --watch",
    "test:single": "playwright test --grep",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "teradata",
    "sql",
    "database",
    "testing",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "teradatasql": "^20.0.24",
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.7.3"
  }
}

